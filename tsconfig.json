{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./src",
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/*.d.ts", "src/app.js",
  ],
}
